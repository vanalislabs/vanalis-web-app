# global options
{
    admin off # there's no need for the admin api in environment
    persist_config off # storage isn't persistent anyway
    auto_https off # handles https for us, this would cause issues if left enabled
    # runtime logs
    log {
        format json # set runtime log format to json mode
    }
    # server options
    servers {
        trusted_proxies static private_ranges 100.0.0.0/8 # trust proxy
    }
}

# site block, listens on the $PORT environment variable, automatically assigned
:{$PORT:3000} {
    # access logs
    log {
        format json # set access log format to json mode
    }

    # health check
    rewrite /health /*

    # serve from the 'dist' folder (Vite builds into the 'dist' folder)
    root * dist

    # enable gzipping responses
    encode gzip

    # serve files from 'dist'
    file_server

    # if path doesn't exist, redirect it to 'index.html' for client side routing
    try_files {path} /index.html
}
